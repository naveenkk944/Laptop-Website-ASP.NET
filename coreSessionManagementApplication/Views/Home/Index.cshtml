@{ ViewData["Title"] = "Home Page"; }
<html>
<head>
    <link rel="stylesheet" href="~/css/home.css">
</head>
<body>

    <main role="main">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" ">
                <div class="carousel-item active">
                   
                    <img class="first-slide" src="https://cdn.pixabay.com/photo/2014/05/02/21/49/laptop-336373__340.jpg" alt="First slide">
                    <div class="container">
                        <div class="carousel-caption text-center">
                            <h1>One place for all laptops</h1>
                            <p> Here is the place you can buy any laptop of your choice and compare your desired one with all the laptops in that range and select the best which suits you.</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="second-slide" src="https://cdn.mos.cms.futurecdn.net/dkEx6momy9WazkfwuPRLJW-1024-80.png.webp" alt="Second slide">
                    <div class="container">
                        <div class="carousel-caption text-center">
                            <h1>Best laptops at best price.</h1>
                            <p> You can experience the laptops with better performance at comparable price.</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="third-slide" src="https://lh3.googleusercontent.com/proxy/35pWmULC089dFnFqGxm6N0ngcIuvd2otIKbN7RpaZ0HyElvMiKfGacNvcgAAhrgzk7e6ljtCb1xG8crBWOKOXxSMg0KG5pBcx_ehnQjx-MXYlnc46ddG" alt="Third slide">
                    <div class="container">
                        <div class="carousel-caption text-center">
                            <h1> Contact for any further information</h1>
                            <p>The customer support is available for customers where our executive will contact you within minimal of 30 minutes.</p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


        <!-- Marketing messaging and featurettes
        ================================================== -->
        <!-- Wrap the rest of the page in another container to center all the content. -->

        <div class="container marketing">

            <!-- Three columns of text below the carousel -->
            <div class="row">
                <div class="col-lg-4">
                    <img class="rounded-circle" src="https://www.lenovo.com/medias/lenovo-laptop-thinkbook-14-gen-2-intel-hero.png?context=bWFzdGVyfHJvb3R8NjcxMjV8aW1hZ2UvcG5nfGhkMC9oNjQvMTEwNzU5MjU2MDY0MzAucG5nfDk5NmFjNzE3N2QwNjk2YWIyMjhkMzZmY2RkYjNjNjliMDExM2E0ZDNkYzMxMjMyYTkzNzAwYjc5ODAyNTI5ZmM" alt="Generic placeholder image" width="140" height="140">
                    <h2>Professional Laptops</h2>
                    <p>Laptops for professional use which gives superior performance.</p>
                    <p><a class="btn btn-secondary" asp-controller="Product" asp-action="Index" role="button">View details &raquo;</a></p>
                </div><!-- /.col-lg-4 -->
                <div class="col-lg-4">
                    <img class="rounded-circle" src="https://dlcdnrog.asus.com/rog/media/1546863952392.jpg" alt="Generic placeholder image" width="140" height="140">
                    <h2>Gaming Laptops</h2>
                    <p>gaming laptops with super cooling technology and good performance are available.</p>
                    <p><a class="btn btn-secondary" asp-controller="Product" asp-action="Index" role="button">View details &raquo;</a></p>
                </div><!-- /.col-lg-4 -->
                <div class="col-lg-4">
                    <img class="rounded-circle" src="https://icdn.digitaltrends.com/image/digitaltrends/lenovo-yoga-c740-07-2.jpg" alt="Generic placeholder image" width="140" height="140">
                    <h2>Student laptops</h2>
                    <p>Laptops for kids and students available at better price.</p>
                    <p><a class="btn btn-secondary" asp-controller="Product" asp-action="Index" role="button">View details &raquo;</a></p>
                </div><!-- /.col-lg-4 -->
            </div><!-- /.row -->
            <!-- START THE FEATURETTES -->


            <!-- /END THE FEATURETTES -->

        </div><!-- /.container -->


</body>
</html>